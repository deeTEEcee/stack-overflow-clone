<%= simple_form_for(@question) do |f| %>
  <%= f.input :title, placeholder: "What's your programming question? Be specific."%>
  <%= f.input :description, as: :text, label: false, input_html: { style: "height: 200px;"} %>
  <% if @question.new_record? %>
    <%= f.button :submit, 'Post Your Question', class: 'btn btn-md btn-primary' %> 
  <% else %>
    <%= f.button :submit, 'Save Edits', class: 'btn btn-md btn-primary' %> 
    <%= link_to 'cancel', question_path(@question) %>
  <% end %>
<% end %>