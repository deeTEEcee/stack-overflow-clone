<%= simple_form_for(@question) do |f| %>
  <%= f.input :title %>
  <%= f.input :description, as: :text, label: false, input_html: { style: "height: 200px;"} %>
  <% if @question.new_record? %>
    <%= f.button :submit, t('page.question.form.post'), class: 'btn btn-md btn-primary' %> 
  <% else %>
    <%= f.button :submit, t('page.question.form.edit'), class: 'btn btn-md btn-primary' %> 
    <%= link_to 'cancel', question_path(@question) %>
  <% end %>
<% end %>